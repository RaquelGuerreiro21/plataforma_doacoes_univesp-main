{
  "version": 2,
  "builds": [
    {
      "src": "doacoes/wsgi.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.12" }
    },
    {
      "src": "vercel_build.sh",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles_build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "doacoes/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "doacoes.settings",
    "PYTHONPATH": "."
  }
}
